include ../../components/extra-info-text-field/extra-info-text-field.pug

mixin createCheckboxButton( {	text, statusText, arrCheckboxes	} )

	- var classname = "checkbox-button"

	div(class=classname)

		+createExtraInfoTextField( {text: text, statusText: statusText}	 )

		div(class = classname + "__group")
			each item in arrCheckboxes

				div(class = classname + "__item")

					input(class = classname + "__input" type="checkbox" id = item.checkboxId)
					label(class = classname + "__label"  for = item.checkboxId)= item.checkboxText