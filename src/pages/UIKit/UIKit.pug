block colorAndType
	div.container__left
		+createRect('ui-color-rect', 'DarkShade100', 'Dark Shade 100%', '#1F2041')
		+createRect('ui-color-rect', 'DarkShade75', 'Dark Shade 75%', '#1F2041')
		+createRect('ui-color-rect', 'DarkShade50', 'Dark Shade 50%', '#1F2041')
		+createRect('ui-color-rect', 'DarkShade25', 'Dark Shade 25%', '#1F2041')
		+createRect('ui-color-rect', 'DarkShade5', 'Dark Shade 5%', '#1F2041')
		+createRect('ui-color-rect', 'Purple', 'Purple', '#BC9CFF')
		+createRect('ui-color-rect', 'Green', 'Green', '#6FCF97')
	div.container__right
		+createFontsExample('h1', 'This one is the sub-section or widget title', 'fonts-example')
		+createFontsExample('h2', 'Next one is the item title inside widgets', 'fonts-example')
		+createFontsExample('h3', 'This is a label or CTA text', 'fonts-example')
		+createFontsExample('body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.', 'fonts-example')



block cards
	div.container__column3
	
		div.site-card.site-card_fields_30
			+createForm('form-search-room', 'get', '/change-me', 'Найдем номера под ваши желания')
				div.form-group.form-group_type_inline.arrival-and-departure
					+createArrivalAndDeparture('arrival-and-departure', 'arrival', 'Прибытие')

				div.form-group.form-group_type_inline.arrival-and-departure
					+createArrivalAndDeparture('arrival-and-departure', 'departure', 'Выезд')

				div.form-group.guests-quantity
					+createGuestsQuantity('guests-quantity', 'guests-quantity', 'Гости')

				+createFormButton('form-search-room', 'Подобрать номер', 'submit')

		div.site-card.site-card_fields_30
			+createForm('form-registration', 'post', '/change-me', 'Регистрация аккаунта')

				div.form-group.client-personal-info
					input.client-personal-info__name(type="text" name="name" id="name" placeholder="Имя")
					input.client-personal-info__surname(type="text" name="surname" id="surname" placeholder="Фамилия")

				div.form-group.form-group_type_inline_row.choose-gender
					input.form-group__input_radio.choose-gender__radio-circle(type="radio" name="gender" value="male" id="gender__male" checked)
					label.form-group__label.form-group__label_radio.choose-gender__text(for="gender__male") Мужчина					
				div.form-group.form-group_type_inline_row.choose-gender
					input.form-group__input_radio.choose-gender__radio-circle(type="radio" name="gender" value="female" id="gender__female")
					label.form-group__label.form-group__label_radio.choose-gender__text(for="gender__female") Женщина

				div.form-group.client-birthday
					label.form-group__label.client-birthday__text(for="birthday") Дата рождения
					input.client-birthday__date-field(type="date" name="birthday" id="birthday")

				div.form-group.client-login-pass
					label.form-group__label.client-login-pass__text Данные для входа в сервис
					input.client-login-pass__email-field(type="email" name="email" placeholder="Email")
					input.client-login-pass__pass-field(type="password" name="password" placeholder="Пароль")
			
				div.form-group.form-group_type_inline_row
					+createToggleButton('toggle-button', 'toggle-button', 'Получать спецпредложения')

				+createFormButton('form-registration', 'перейти к оплате', 'submit')

				+createMoveToAnotherForm

	div.container__column3

		div.site-card.site-card_fields_30
			+createForm('form-booking-room', 'get', '/change-me', '')
				+createRoomInfo('room-info', 888, 'люкс', '9 990')

				div.form-group.form-group_type_inline.arrival-and-departure
					label.form-group__label.arrival-and-departure__text(for="booking-arrival") Прибытие
					input.arrival-and-departure__date-field(type="date" name="arrival" id="booking-arrival")
				div.form-group.form-group_type_inline.arrival-and-departure
					label.form-group__label.arrival-and-departure__text(for="booking-departure") Выезд
					input.arrival-and-departure__date-field(type="date" name="departure" id="booking-departure")


				div.form-group.guests-quantity
					label.form-group__label.guests-quantity__text Гости
					select.guests-quantity__select-field(name="guests-quantity")
						option.guests-quantity__option-field(value="" disabled selected) Сколько гостей
						option.guests-quantity__option-field(value="1") 1 гость
						option.guests-quantity__option-field(value="2") 2 гостя
						option.guests-quantity__option-field(value="3") 3 гостя

				div.form-group.services-list
					+createServicesList('services-and-prices')

				+createFormButton('form-booking-room', 'Забронировать', 'submit')

		div.site-card.site-card_fields_30
			+createForm('form-login', 'get', '/change-me', 'Войти')

				div.form-group.client-login-pass
						input.client-login-pass__email-field(type="email" name="email"  placeholder="Email")
						input.client-login-pass__pass-field(type="password" name="password" placeholder="Пароль")

				+createFormButton('form-login', 'Войти', 'submit')

			div.move-to-another-form
				p.move-to-another-form__text Нет аккаунта на Toxin?
				+createButton('enter-button', 'Создать', 'light')


	div.container__column3.container__column3_width320

		div.site-card.site-card_fields_20
			div.calendar


		div.site-card

			div.room-card
				img.room-card__picture(src='/img/room888_picture.png' width='320px')
				div.room-card__data

					+createRoomInfo('room-info', 888, 'люкс', '9 990', 'border_bottom')

					div.room-rating-and-reviews
						div.rating
							input(type='radio' id='star-5' name='rating' value='5')
							label(for='star-5')
							input(type='radio' id='star-4' name='rating' value='4')
							label(for='star-4')
							input(type='radio' id='star-3' name='rating' value='3')
							label(for='star-3')
							input(type='radio' id='star-2' name='rating' value='2')
							label(for='star-2')
							input(type='radio' id='star-1' name='rating' value='1')
							label(for='star-1')
						div.reviews 145
							span отзывов

